<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:CraKit.Templates">

    <Style Selector="control|TemplateControl">
        <Setter Property="Template">
            <ControlTemplate TargetType="control:TemplateControl">

                <Grid RowDefinitions="Auto,*">

                    <!-- Bandeau haut -->
                    <Border Grid.Row="0"
                            Background="#333"
                            Padding="8,4">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{TemplateBinding Title}"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="4,0,0,0"/>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        VerticalAlignment="Center">
                                <ContentPresenter Content="{TemplateBinding HeaderRight}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Contenu -->
                    <Grid Grid.Row="1"
                          ColumnDefinitions="320,*">

                        <!-- Colonne gauche -->
                        <Border Grid.Column="0"
                                Background="#2b2b2b"
                                Padding="8"
                                BorderBrush="#444"
                                BorderThickness="0,1,1,0">
                            <ContentPresenter Content="{TemplateBinding LeftPane}"/>
                        </Border>

                        <!-- Colonne droite -->
                        <Border Grid.Column="1"
                                Background="#1f1f1f"
                                Padding="8"
                                BorderBrush="#444"
                                BorderThickness="0,1,0,0">
                            
                            <Grid RowDefinitions="*,Auto,Auto,Auto,Auto,*">

                                <!-- Zone d’options (listes déroulantes, boutons…) -->
                                <Border Grid.Row="0"
                                        Background="#3a3a3a"
                                        Padding="8,6"
                                        Margin="0,0,0,6">
                                    <ContentPresenter Content="{TemplateBinding RightTop}"/>
                                </Border>

                                <!-- En-tête Entrée -->
                                <Border Grid.Row="1"
                                        Background="#3a3a3a"
                                        Padding="8,4">
                                    <TextBlock Text="Entrée"/>
                                </Border>

                                <!-- Zone Entrée -->
                                <Border Grid.Row="2"
                                        Background="#111"
                                        Padding="8"
                                        Margin="0,4,0,8">
                                    <ContentPresenter Content="{TemplateBinding Input}"/>
                                </Border>

                                <!-- Zone Lancer -->
                                <Border Grid.Row="3"
                                        Background="#3a3a3a"
                                        Padding="8,4"
                                        Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <ContentPresenter Content="{TemplateBinding RunArea}"/>
                                    </StackPanel>
                                </Border>

                                <!-- En-tête Sortie -->
                                <Border Grid.Row="4"
                                        Background="#3a3a3a"
                                        Padding="8,4">
                                    <TextBlock Text="Sortie"/>
                                </Border>

                                <!-- Zone Sortie -->
                                <Border Grid.Row="5"
                                        Background="#000"
                                        Padding="8"
                                        Margin="0,4,0,0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ContentPresenter Content="{TemplateBinding Output}"/>
                                    </ScrollViewer>
                                </Border>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

</Styles>
